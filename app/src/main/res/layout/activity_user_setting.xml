<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sep.software.anicare.activity.UserSettingActivity">

    <TextView android:text="in user set activity" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_setting_text_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set TestUser"
        android:id="@+id/user_setting_rand_set"
        android:layout_below="@+id/user_setting_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to Pet Setting Activity"
        android:id="@+id/user_setting_go_to_pet_setting"
        android:layout_below="@+id/user_setting_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go back to Main"
        android:id="@+id/user_setting_go_back_to_main"
        android:layout_below="@+id/user_setting_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp" />

</RelativeLayout>
